<% if user_signed_in? %>
<div class="page-header">
<% if @hours == 0 %>
	  <h1>No Hours Logged Yet!</h1>
<% else %>
  <h1>Well You've been busy!<small><i><%= @hours %> Hours Logged from all time</small></i></h1>
  <% end %>
</div>

<%= content_tag :div, "", id: "orders_chart", data: {orders: @timesheets} %>




<% else %>
<div class="hero-unit text-center">
<h1>Language Timesheet Tracker</h1>
It is time to log those hours.<br><br>
<div class="btn btn-large">
	<%= link_to "Log In", new_user_session_path %>
</div>
</div>
<% end %>