<% if user_signed_in? %>
	<div class="page-header">
	 <h1>Welcome back, <i><%= @name %>!</i>
	 <small><i>Here is your word of the day.</i></small></h1>
	 <small><i></small></i></h1>
	</div>


<h3><div class="span3 offset1 text-center word"><%= @khmer %> </div></h3>
<h3><div class="span3 offset1 text-center word"><%= @english %></div></h3>
<h3><div class="span3 offset1 text-center word"><%= @english %></div></h3>


<div class="span12">
<div id="sentences">
<div class="tabbable"> <!-- Only required for left/right tabs -->
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">Khmer Sentence</a></li>
    <li><a href="#tab2" data-toggle="tab">Phonetics</a></li>
    <li><a href="#tab3" data-toggle="tab">English Translation</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <h4>Khmer Sentence:</h4> 
	<div class="span11 sentences">
		<h3><%= @khmersentence %></h3>
	</div>
    </div>
    <div class="tab-pane" id="tab2">
    <h4>Phonetics:</h4>
		<div class="span11 sentences">
		<h4> <%= @phonetic %></h4>
		</div>
    </div>
    <div class="tab-pane" id="tab3">
    <h4>English Translation:</h4>
	<div class="span11 sentences">
	<h4> <%= @englishsentence %></h4>
	</div>
    </div>
    </div>
  </div>
</div>

</ul>
</div>
</div>



<% else %>
	<div class="hero-unit text-center">
		<h1>Language Timesheet Tracker</h1>
			It is time to log those hours.<br><br>
				<div class="btn btn-large">
					<%= link_to "Log In", new_user_session_path %>
				</div>
	</div>
<% end %>