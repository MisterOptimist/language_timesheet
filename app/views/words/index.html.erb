<h1>Listing words</h1>

<table class="nicetable table-condensed">
  <tr>
    <th>Khmer</th>
    <th>English</th>
    <th>Date Shown</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.khmer %></td>
    <td><%= word.english %></td>
    <td><%= word.rndm %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

