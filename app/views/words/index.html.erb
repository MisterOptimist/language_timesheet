<div class="page-header"><h1>Listing words</h1></div>

<table class="nicetable table-condensed">
  <tr>
    <th>Date Shown</th>
    <th>Khmer</th>
    <th>English</th>
    <th>Phonetic</th>
    <th>Khmer Sentence</th>
    <th>Phonetic Sentence</th>
    <th>English Sentence</th>
    <th>Actions</th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.rndm %></td>
    <td><%= word.khmer %></td>
    <td><%= word.english %></td>
    <td><%= word.english_phonetic %></td>
    <td><%= word.khmersentence %></td>
    <td><%= word.phonetic %></td>
    <td><%= word.englishsentence %></td>
    <td><%= link_to 'Edit', edit_word_path(word), class: "btn btn-mini" %> <%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-mini" %></td>
  </tr>
<% end %>
</table>

<br />
<%= paginate @words %>
<%= link_to 'Add New Word', new_word_path, class: "btn btn-success" %>
