<div class="page-header"><h1>Listing words</h1></div>


<table class="table table-striped table-bordered table-condensed table-hover">
  <tr>
    <th>Khmer</th>
    <th>Phonetic</th>
    <th>English</th>
    <th>Khmer Sentence</th>
    <th>Phonetic Sentence</th>
    <th>English Sentence</th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.khmer %></td>
    <td><%= word.english_phonetic %></td>
    <td><%= word.english %></td>
    <td><%= word.khmersentence %></td>
    <td><%= word.phonetic %></td>
    <td><%= word.englishsentence %></td>
    
  </tr>
<% end %>
</table>

<br />
<%= paginate @words %>

