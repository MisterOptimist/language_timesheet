<%= simple_form_for(@word) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :khmer %>
    <%= f.input :english %>
    <%= f.input :rndm %>
    <%= f.input :khmersentence %>
